{
  "env": {
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "no-restricted-imports": ["error", "lodash", "underscore"],
    "eqeqeq": ["error"],
    "no-console": ["error"],
    "consistent-return": ["error"],
    "no-unused-vars": ["error"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
